<h1 id="title">New Employee</h1>

<div id="form_create_employees">
  <%= form_for :new_employee do |employee_form| %>
    Identidad: <%= employee_form.text_field :identity %> <br>
    Name: <%= employee_form.text_field :name %> <br><br>
    Surname: <%= employee_form.text_field :surname %> <br><br>
    Age: <%= employee_form.text_field :age %> <br><br>
    Gender: <%= employee_form.select :gender, ["M", "F"] %> <br><br>
    Employee type: <%= employee_form.select :employee_type, ["Normal", "Administrador"] %> <br><br>
    Email: <%= employee_form.text_field :email %> <br><br>
    Password: <%= employee_form.password_field :password %> <br><br>
    Station: <%= employee_form.collection_select(:station_id, Station.all, :id, :name) %>

    <br><br><%= employee_form.submit %>
  <% end %>
</div>